<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Magazynek.Views.NewOrderPage"
             Title="NowaRezerwacjaPage">
    
    <VerticalStackLayout>
        
        <Label 
            Text="Formularz nowej rezerwacji"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <StackLayout Padding="10">
            <Label Text="Status:" Style="{StaticResource FormNamesFont}"/>
            <Picker Title="Magazyn" TitleColor="LightGray"/>

            <Label Text="Asortyment:" Margin="20, 0, 0, 0" Style="{StaticResource FormNamesFont}"/>
            <Picker Title="Towar" TitleColor="LightGray"/>
            <Editor Placeholder="Ilość"/>

            <Label Text="Dane:" Margin="20, 0, 0, 0" Style="{StaticResource FormNamesFont}"/>
            <Editor Placeholder="Kwota do zapłaty"/>
            <Editor Placeholder="Tytuł"/>
            <Editor Placeholder="Podtytuł"/>

            <Label Text="Data wprowadzenia:" Margin="20, 0, 0 ,0" Style="{StaticResource FormNamesFont}"/>
            <DatePicker Format="dd/MM/yyyy"/>
            <Label Text="Data realizacji:" Margin="20, 0, 0, 0" Style="{StaticResource FormNamesFont}"/>
            <DatePicker Format="dd/MM/yyyy" Margin="0, 0, 40, 0"/>
            <Label Text="Dodatkowe dane:" Style="{StaticResource FormNamesFont}"/>
            <Editor Placeholder="Uwagi"/>
         
        </StackLayout>
        <Button Text="Zapisz" Margin="5"/>
    </VerticalStackLayout>
</ContentPage>