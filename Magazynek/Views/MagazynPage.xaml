<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Magazynek.Views.MagazynPage"
             Title="MagazynPage"
             xmlns:local="clr-namespace:Magazynek.ViewModels">

    <ContentPage.BindingContext>
        <local:ItemsViewModel />
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <StackLayout>
            <Label Text="Stan magazynu"/>
            <Button Text="Wybierz magazyn"/>
            <Button Text="Importuj" Command="{Binding Button_OpenFileCommand}"  HeightRequest="50" WidthRequest="100" HorizontalOptions="End"></Button>
        </StackLayout>
    </Shell.TitleView>

    <ListView ItemsSource="{Binding Asortyment}" HasUnevenRows="True" RowHeight="75" IsPullToRefreshEnabled="True" RefreshCommand="{Binding ListView_RefreshCommand}" IsRefreshing="{Binding IsRefreshing}" SelectedItem="{Binding ListView_ItemSelectedCommand}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <!-- Define the layout for each item in the list -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Padding="10" Grid.Column="0" VerticalOptions="Start">
                            <Label Text="Symbol:" Style="{StaticResource Labelfont}"/>
                            <Label Text="{Binding Symbol}" FontAttributes="Bold" Style="{StaticResource Labelfont}" LineBreakMode="TailTruncation"/>
                            <Label Text="Nazwa:" Style="{StaticResource Labelfont}"/>
                            <Label Text="{Binding Nazwa}" FontAttributes="Bold" Style="{StaticResource Labelfont}" LineBreakMode="CharacterWrap"/>
                            <Label Text="Cena:" Style="{StaticResource Labelfont}" />
                            <Label Text="{Binding CenaEwidencyjna, StringFormat='{0} zÅ‚'}" FontAttributes="Bold" Style="{StaticResource Labelfont}" />
                        </StackLayout>
                        <StackLayout Padding="10" VerticalOptions="Start" Grid.Column="1">
                            <Label Text="Stan:" Style="{StaticResource Labelfont}"/>
                            <Label Text="{Binding IloscDostepna}" FontAttributes="Bold" Style="{StaticResource Labelfont}" />
                            <Label Text="ZAR.IL.:" Style="{StaticResource Labelfont}" LineBreakMode="WordWrap"/>
                            <Label Text="{Binding IloscZarezerwowanaIlosciowo}" FontAttributes="Bold" Style="{StaticResource Labelfont}" />
                            <Label Text="ZAR.DOST.:" Style="{StaticResource Labelfont}"/>
                            <Label Text="{Binding IloscZarezerwowanaDostawowo}" FontAttributes="Bold" Style="{StaticResource Labelfont}" />
                        </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>