<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Magazynek.Views.MagazynPage"
             Title="MagazynPage">
    
    <ListView ItemsSource="{Binding Items}" HasUnevenRows="False" RowHeight="75">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <!-- Define the layout for each item in the list -->
                    <StackLayout Orientation="Horizontal">
                        <StackLayout>
                            <Image Source="{Binding Photo}" HeightRequest="50" WidthRequest="50" />
                        </StackLayout>
                        <StackLayout Padding="10">
                            <!--<Image Source="{Binding Photo}" HeightRequest="50" WidthRequest="50" /> -->
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" />
                        </StackLayout>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Quantity, StringFormat='Ilość: {0}'}" />
                            <Label Text="{Binding Price, StringFormat='Cena: {0} zł'}" />
                        </StackLayout>
                    </StackLayout>

                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>